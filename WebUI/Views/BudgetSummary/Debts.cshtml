@model SummaryViewModel

<link rel="stylesheet" href="~/css/dataTables.bootstrap4.css">

<style>
    .debt-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        padding: 1.5rem;
    }

    .stat-item {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 159, 67, 0.1);
    }

    .stat-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(255, 159, 67, 0.15);
    }

    .stat-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(255, 159, 67, 0.05), rgba(255, 159, 67, 0.1));
        z-index: 0;
    }

    .stat-content {
        position: relative;
        z-index: 1;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: rgba(255, 159, 67, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        color: #ff9f43;
        font-size: 1.5rem;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .trend-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        background: rgba(255, 159, 67, 0.1);
        color: #ff9f43;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .trend-indicator i {
        font-size: 1rem;
    }

    .transaction-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
    }

    .transaction-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        overflow: hidden;
        position: relative;
    }

    .transaction-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .transaction-header {
        padding: 1.5rem;
        background: linear-gradient(45deg, #f8f9fa, #ffffff);
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .transaction-amount {
        font-size: 1.5rem;
        font-weight: 700;
        color: #ff9f43;
    }

    .transaction-category {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        background: rgba(255, 159, 67, 0.1);
        color: #ff9f43;
    }

    .transaction-body {
        padding: 1.5rem;
    }

    .transaction-info {
        display: grid;
        gap: 1rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f8f9fa;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .info-value {
        font-weight: 600;
        color: #2c3e50;
    }

    .transaction-footer {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .transaction-date {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .page-header {
        padding: 2rem 1rem;
        background: linear-gradient(45deg, #f8f9fa, #ffffff);
        margin-bottom: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin: 0;
        font-size: 2rem;
    }

    .debt-progress {
        height: 8px;
        border-radius: 4px;
        background: #f8f9fa;
        margin: 1rem 0;
        overflow: hidden;
    }

    .debt-progress-bar {
        height: 100%;
        border-radius: 4px;
        background: linear-gradient(45deg, #ff9f43, #ff7f00);
        transition: width 0.3s ease;
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="page-title">Borçlarım</h1>
    </div>

    <!-- Borç İstatistikleri -->
    <div class="debt-stats">
        <div class="stat-item">
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fe fe-dollar-sign"></i>
                </div>
                <div class="stat-label">Toplam Borç</div>
                <div class="stat-value">₺ @Model.ToplamBorcum.ToString("N2")</div>
                <div class="trend-indicator">
                    <i class="fe fe-arrow-down-right"></i>
                    Azalış
                </div>
            </div>
        </div>
        <div class="stat-item">
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fe fe-credit-card"></i>
                </div>
                <div class="stat-label">Asgari Ödeme</div>
                <div class="stat-value">₺ @Model.AsgariOdeme.ToString("N2")</div>
                <div class="trend-indicator">
                    <i class="fe fe-clock"></i>
                    Bu Ay
                </div>
            </div>
        </div>
        <div class="stat-item">
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fe fe-alert-circle"></i>
                </div>
                <div class="stat-label">Vadesi Yaklaşan</div>
                <div class="stat-value">₺2,500.00</div>
                <div class="trend-indicator">
                    <i class="fe fe-calendar"></i>
                    7 gün
                </div>
            </div>
        </div>
    </div>

    <div class="transaction-grid">
        @foreach (var card in Model.MyCreditCards.Data)
        {
            var usedLimit = card.Limit - card.AvaliableLimit;
            var usagePercent = card.Limit > 0 ? (int)Math.Round((usedLimit / card.Limit) * 100) : 0;
            var tarih = new DateTime(DateTime.Now.Year, DateTime.Now.Month, card.StatementClosingDate);
            <div class="transaction-card">
                <div class="transaction-header">
                    <div class="transaction-amount">
                        ₺ @((card.Limit - card.AvaliableLimit).ToString("N2"))
                    </div>
                    <div class="transaction-category">
                        @card.Name
                    </div>
                </div>
                <div class="transaction-body">
                    <div class="transaction-info">
                        <div class="info-item">
                            <span class="info-label">Banka</span>
                            <span class="info-value">@card.BankName</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Asgari Ödeme</span>
                            <span class="info-value">₺ @(((card.Limit - card.AvaliableLimit) * (decimal)0.25).ToString("N2"))</span>
                        </div>
                        <div class="debt-progress">
                            <div class="debt-progress-bar" style="width: @usagePercent%;"></div>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Kullanım</span>
                            <span class="info-value">%@usagePercent</span>
                        </div>
                    </div>
                </div>
                <div class="transaction-footer">
                    <div class="transaction-date">
                        <i class="fe fe-calendar mr-1"></i>
                        Son Ödeme: @tarih.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>