@model SummaryViewModel

<link rel="stylesheet" href="~/css/dataTables.bootstrap4.css">

<style>
    .income-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        padding: 1.5rem;
    }

    .stat-item {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        border: 1px solid rgba(58, 210, 159, 0.1);
    }

    .stat-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(58, 210, 159, 0.15);
    }

    .stat-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(58, 210, 159, 0.05), rgba(58, 210, 159, 0.1));
        z-index: 0;
    }

    .stat-content {
        position: relative;
        z-index: 1;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: rgba(58, 210, 159, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        color: #3ad29f;
        font-size: 1.5rem;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .trend-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        background: rgba(58, 210, 159, 0.1);
        color: #3ad29f;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .trend-indicator i {
        font-size: 1rem;
    }

    .transaction-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
    }

    .transaction-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        overflow: hidden;
        position: relative;
    }

    .transaction-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .transaction-header {
        padding: 1.5rem;
        background: linear-gradient(45deg, #f8f9fa, #ffffff);
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .transaction-amount {
        font-size: 1.5rem;
        font-weight: 700;
        color: #3ad29f;
    }

    .transaction-category {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        background: rgba(58, 210, 159, 0.1);
        color: #3ad29f;
    }

    .transaction-body {
        padding: 1.5rem;
    }

    .transaction-info {
        display: grid;
        gap: 1rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f8f9fa;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .info-value {
        font-weight: 600;
        color: #2c3e50;
    }

    .transaction-footer {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .transaction-date {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .transaction-actions {
        display: flex;
        gap: 0.5rem;
    }

    .action-button {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .action-button:hover {
        transform: translateY(-2px);
    }

    .action-button.edit {
        background: rgba(58, 210, 159, 0.1);
        color: #3ad29f;
    }

    .action-button.history {
        background: rgba(54, 162, 235, 0.1);
        color: #36a2eb;
    }

    .action-button.delete {
        background: rgba(255, 99, 132, 0.1);
        color: #ff6384;
    }

    .page-header {
        padding: 2rem 1rem;
        background: linear-gradient(45deg, #f8f9fa, #ffffff);
        margin-bottom: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin: 0;
        font-size: 2rem;
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="page-title">Gelirlerim</h1>
    </div>

    <!-- Gelir İstatistikleri -->
    <div class="income-stats">
        <div class="stat-item">
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fe fe-dollar-sign"></i>
                </div>
                <div class="stat-label">Toplam Gelir</div>
                <div class="stat-value">₺ @Model.ToplamGelir</div>
                <div class="trend-indicator">
                    <i class="fe fe-arrow-up-right"></i>
                    Artış
                </div>
            </div>
        </div>
        <div class="stat-item">
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fe fe-trending-up"></i>
                </div>
                <div class="stat-label">Aylık Ortalama</div>
                <div class="stat-value">₺ @Model.AylıkOrtalamaGelir</div>
                <div class="trend-indicator">
                    <i class="fe fe-arrow-up-right"></i>
                    Artış
                </div>
            </div>
        </div>
        <div class="stat-item">
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fe fe-award"></i>
                </div>
                <div class="stat-label">En Yüksek Gelir</div>
                <div class="stat-value">₺ @Model.EnYuksekGelir</div>
                <div class="stat-label" style="color: #3ad29f;"></div>
            </div>
        </div>
    </div>

    <div class="transaction-grid">
        @foreach (var income in Model.BankTransactionList.Data)
        {
            <div class="transaction-card">
                <div class="transaction-header">
                    <div class="transaction-amount">
                        + @income.Amount.ToString("N2") @income.Currency
                    </div>
                    <div class="transaction-category">
                        @income.Category
                    </div>
                </div>
                <div class="transaction-body">
                    <div class="transaction-info">
                        <div class="info-item">
                            <span class="info-label">Açıklama</span>
                            <span class="info-value">@income.Description</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Tarih</span>
                            <span class="info-value">@(income.Date != null ? ((DateTime)income.Date).ToString("dd MMM yyyy") : "-")</span>
                        </div>
                    </div>
                </div>
                <div class="transaction-footer">
                    <div class="transaction-date">
                        <i class="fe fe-calendar mr-1"></i>
                        @(income.Date != null ? ((DateTime)income.Date).ToString("dd MMM yyyy") : "-")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        // Düzenleme modalını açarken verileri doldur
        $('#updateModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var card = button.closest('.transaction-card');
            
            var description = card.find('.info-value').first().text();
            var category = card.find('.transaction-category').text();
            var amount = card.find('.transaction-amount').text().replace(/[^0-9.,]/g, '');
            var currency = card.find('.transaction-amount').text().replace(/[0-9., ]/g, '').trim();

            $('#updateId').val(id);
            $('#updateDescription').val(description);
            $('#updateCategory').val(category);
            $('#updateAmount').val(amount);
            $('#updateCurrency').val(currency);
        });

        // Silme modalını açarken ID'yi ayarla
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            $('#deleteId').val(id);
        });
    });
</script>

