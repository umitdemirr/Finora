        align-items: center;
    }

    .summary-info {
        display: flex;
        flex-direction: column;
    }

    .summary-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .summary-amount {
        font-size: 1.5rem;
        font-weight: 700;
    }

    .summary-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .icon-buy {
        background-color: rgba(58, 210, 159, 0.1);
        color: #3ad29f;
    }

    .icon-sell {
        background-color: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }

    .page-header {
        padding: 2rem 1rem;
        background: linear-gradient(45deg, #f8f9fa, #ffffff);
        margin-bottom: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin: 0;
